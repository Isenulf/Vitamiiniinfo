---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import type { ImageMetadata } from 'astro';
import FallbackImage from '../assets/blog-placeholder-1.jpg';

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata;
	canonical?: string;
	ogUrl?: string;
	ogType?: 'website' | 'article';
}

const { title, description, image = FallbackImage, canonical, ogUrl, ogType = 'website' } = Astro.props;

const canonicalURL = canonical
	? new URL(canonical)
	: Astro.site
		? new URL(Astro.url.pathname, Astro.site)
		: Astro.url;
const openGraphURL = ogUrl ? new URL(ogUrl) : canonicalURL;
const googleSiteVerification = import.meta.env.PUBLIC_GOOGLE_SITE_VERIFICATION || '';
const cloudflareBeaconToken = import.meta.env.PUBLIC_CLOUDFLARE_BEACON_TOKEN || '';
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="robots" content="index,follow,max-image-preview:large" />
<meta name="theme-color" content="#efedeb" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="dns-prefetch" href="//fonts.gstatic.com" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" href="/favicon.ico" />
<link rel="sitemap" href="/sitemap-index.xml" />
<meta name="generator" content={Astro.generator} />
{googleSiteVerification && <meta name="google-site-verification" content={googleSiteVerification} />}

<!-- Font preloads -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={ogType} />
<meta property="og:url" content={openGraphURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image.src, canonicalURL)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={openGraphURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image.src, canonicalURL)} />

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-21SBNCRV0F"></script>
<script is:inline>
  window.dataLayer = window.dataLayer || [];
  window.gtag = window.gtag || function gtag() {
    window.dataLayer.push(arguments);
  };

  window.gtag('consent', 'default', {
    analytics_storage: 'denied',
    ad_storage: 'denied',
    ad_user_data: 'denied',
    ad_personalization: 'denied',
  });

  window.gtag('js', new Date());
  window.gtag('config', 'G-21SBNCRV0F');
</script>

<script is:inline define:vars={{ cloudflareBeaconToken }}>
  (() => {
    const STORAGE_KEY = 'cookie-consent';
    const COOKIE_NAME = 'cookie-consent';
    const CF_LOADER_ID = 'cf-analytics-loader';

    const getCookieValue = (name) => {
      const encodedName = `${name}=`;
      const parts = document.cookie.split(';');
      for (const part of parts) {
        const cookie = part.trim();
        if (cookie.startsWith(encodedName)) {
          return decodeURIComponent(cookie.slice(encodedName.length));
        }
      }
      return null;
    };

    const parseConsent = () => {
      const sources = [localStorage.getItem(STORAGE_KEY), getCookieValue(COOKIE_NAME)];
      for (const source of sources) {
        if (!source) continue;
        if (source === 'accepted') return { necessary: true, analytics: true };
        try {
          const parsed = JSON.parse(source);
          if (typeof parsed?.analytics === 'boolean') {
            return { necessary: true, analytics: parsed.analytics };
          }
        } catch {
          continue;
        }
      }

      return null;
    };

    const loadCloudflareAnalytics = () => {
      if (!cloudflareBeaconToken || document.getElementById(CF_LOADER_ID)) return;
      const script = document.createElement('script');
      script.id = CF_LOADER_ID;
      script.defer = true;
      script.src = 'https://static.cloudflareinsights.com/beacon.min.js';
      script.setAttribute('data-cf-beacon', JSON.stringify({ token: cloudflareBeaconToken }));
      document.head.append(script);
    };

    const updateConsent = (consent) => {
      const granted = Boolean(consent?.analytics);
      window.gtag('consent', 'update', {
        analytics_storage: granted ? 'granted' : 'denied',
      });

      if (granted) {
        loadCloudflareAnalytics();
      }
    };

    window.__updateCookieConsent = updateConsent;

    const storedConsent = parseConsent();
    if (storedConsent) {
      updateConsent(storedConsent);
    }
  })();
</script>
