---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  canonical: string;
  type?: 'website' | 'article';
}

const { title, description, canonical, type = 'website' } = Astro.props;
---

<!doctype html>
<html lang="et">
  <head>
    <BaseHead title={title} description={description} canonical={canonical} ogUrl={canonical} ogType={type} />
    <slot name="head" />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
